<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:columnCount="3"
    android:columnWidth="320dp"
    android:orientation="vertical"
    android:rowCount="3"
    android:stretchMode="columnWidth"
    >

  <RelativeLayout
      android:id="@+id/topleft"
      android:layout_width="120dp"
      android:layout_height="100dp"
      android:layout_row="0"
      android:layout_margin="4dp"
      android:visibility="invisible">
    <TextView
        android:id="@+id/tvScreen3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        tools:text="3"
        />
  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/topmid"
      android:layout_width="120dp"
      android:layout_height="100dp"
      android:layout_row="0"
      android:layout_margin="4dp"
      android:visibility="visible">
    <TextView
        android:id="@+id/tvScreen4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        tools:text="4"
        />
  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/topend"
      android:layout_width="120dp"
      android:layout_height="100dp"
      android:layout_row="0"
      android:layout_margin="4dp"
      android:visibility="invisible">
    <TextView
        android:id="@+id/tvScreen5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        tools:text="5"
        />
  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/midleft"
      android:layout_width="120dp"
      android:layout_height="100dp"
      android:layout_row="1"
      android:layout_column="0"
      android:layout_margin="4dp"
      android:visibility="visible">
    <TextView
        android:id="@+id/tvScreen6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        tools:text="6"
        />
  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/midmid"
      android:layout_width="120dp"
      android:layout_height="100dp"
      android:layout_row="1"
      android:layout_margin="4dp"
      android:background="@drawable/green_border_white_bkgrd"
      android:visibility="visible">
    <TextView
        android:id="@+id/tvScreen0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        tools:text="1"
        />
  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/midend"
      android:layout_width="120dp"
      android:layout_height="100dp"
      android:layout_row="1"
      android:layout_margin="4dp"
      android:background="@color/splash"
      android:visibility="visible">
    <TextView
        android:id="@+id/tvScreen2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:text="2"
        />
  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/endleft"
      android:layout_width="120dp"
      android:layout_height="100dp"
      android:layout_row="2"
      android:layout_column="0"
      android:layout_margin="4dp"
      android:visibility="invisible">
    <TextView
        android:id="@+id/tvScreen7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        tools:text="7"
        />
  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/endmid"
      android:layout_width="120dp"
      android:layout_height="100dp"
      android:layout_row="2"
      android:layout_margin="4dp"
      android:visibility="visible">
    <TextView
        android:id="@+id/tvScreen8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        tools:text="8"
        />
  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/endend"
      android:layout_width="120dp"
      android:layout_height="100dp"
      android:layout_row="2"
      android:layout_margin="4dp"
      android:visibility="invisible">
    <TextView
        android:id="@+id/tvScreen9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        tools:text="9"
        />
  </RelativeLayout>
</GridLayout>